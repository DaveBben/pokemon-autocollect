<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">




    <item android:state_pressed="true" >
        <shape android:shape="oval">

            <solid
                android:color="#00D6FF" />
            <stroke
                android:width="1dp"
                android:color="#006B7F" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#00D6FF"
                android:endColor="#006B7F"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#006B7F" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>





</selector>